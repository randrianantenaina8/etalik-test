{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Liste des produits</h1>
                <p>
                    <a href="{{ path('app_product_new') }}" class="btn btn-primary my-2">Cr√©er un nouveau</a>
                </p>
            </div>
        </div>
    </section>

    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for product in products %}
                <div class="col">
                    <div class="card shadow-sm">
                        <p class="bd-placeholder-img card-img-top">{{ product.name }}.</p>
                        <div class="card-body">
                            <p class="card-text">{{ product.description|slice(0, 300) }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">Editer</a>
                                </div>
                                <small class="text-body-secondary">{{ product.price ? product.price : '' }}&euro;</small>
                                <small class="text-body-secondary">{{ product.availabilityDate ? product.availabilityDate|date('d/m/Y') : '' }}</small>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <p class="bd-placeholder-img card-img-top">no records found.</p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
