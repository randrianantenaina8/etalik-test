{% extends 'base.html.twig' %}

{% block title %}Visualiser le app_product_index{% endblock %}

{% block body %}
    <h1>Fiche produit</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Date de disponibilité</th>
                <td>{{ product.availabilityDate ? product.availabilityDate|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Retour à la liste</a>&nbsp;|

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>
    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
