<div class="py-5 text-center">
    <h2>Editer un produit</h2>
</div>
<div class="container">
    <div class="row g-5">

        <div class="col-md-12 col-lg-12">
           {{ form_start(form) }}
                <div class="row g-3">
                    <div class="col-sm-12">
                        <label for="product_name" class="form-label">Nom</label>
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'nom' }}) }}
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label for="product_price" class="form-label">Prix (en &euro;)</label>
                        {{ form_widget(form.price, { 'attr': {'class': 'form-control', 'placeholder': 'prix' }}) }}
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label for="product_description" class="form-label">Description</label>
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'description' }}) }}
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <label for="product_availability_date" class="form-label">Date de disponibilité</label>
                        {{ form_widget(form.availability_date, { 'attr': {'class': 'form-control', 'placeholder': 'date de disponibilité' }}) }}
                        <div class="invalid-feedback">
                            Valid first name is required.
                        </div>
                    </div>
                </div>
                <br/>
                <button class="w-100 btn btn-primary btn-lg" type="submit">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

